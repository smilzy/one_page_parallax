<div class="container">
    <div class="col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-sm-10">
                <h3 class="text-center">Skontaktuj się ze mną</h3>
                <p class="text-center"> </p>
                <div class="well">
                    <% @contact = Contact.new %>
                    <%= form_for @contact do |f| %> 
                        <div class="form-group">
                            <%= f.label 'Imię' %>
                            <%= f.text_field :name, class: 'form-control' %>
                        </div>
                        
                        <div class="form-group">
                            <%= f.label 'Adres email' %>
                            <%= f.text_field :email, class: 'form-control' %>
                        </div>
                            
                        <div class="form-group">
                            <%= f.label 'Wiadomość' %>
                            <%= f.text_area :message, class: 'form-control' %>
                        </div>
                    
                        <%= f.submit 'Wyślij', class: 'btn btn-default btn-block' %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>